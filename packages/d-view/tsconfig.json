{
  "compilerOptions": {
    "baseUrl": "./",
    "paths": {
      "@/*": ["./*"]
    },
    "moduleResolution": "node",
    "removeComments": true,
    "strict": true,
    "allowJs": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "jsx": "preserve",
    "skipLibCheck": true
  },
  "exclude": ["node_modules/**", "dist/**"]
}
